{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}/index.c",
                "${fileDirname}/libs/http-parser/http_parser.c",
                "${fileDirname}/libs/http-server/http_server.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Ilibs/http-parser",
                "-Ilibs/http-server"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}